        <Button Content="Ученики 7А" HorizontalAlignment="Left" Margin="232,181,0,0" VerticalAlignment="Top" Height="44" Background="Transparent" FontFamily="Bahnschrift Condensed" FontSize="20" Style="{DynamicResource RoundButton}" BorderBrush="White" Foreground="White" Width="138" Click="Button_Click_2"/>
