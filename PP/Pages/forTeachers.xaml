        <Button Content="Оценки 6А" HorizontalAlignment="Left" Margin="433,111,0,0" VerticalAlignment="Top" Height="46" Background="Transparent" FontFamily="Bahnschrift Condensed" FontSize="20" Style="{DynamicResource RoundButton}" BorderBrush="White" Foreground="White" Width="138"  Click="Button_Click_10"/>
