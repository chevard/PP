        </Button>
        <Button Content="Мероприятия" HorizontalAlignment="Left" Margin="406,304,0,0" VerticalAlignment="Top" Height="47" Background="Transparent" FontFamily="Bahnschrift Condensed" FontSize="20" Style="{DynamicResource RoundButton}" BorderBrush="White" Foreground="White" Width="192"  Click="SobBTN"/>

    </Grid>
