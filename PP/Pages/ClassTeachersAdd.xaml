        <Button  x:Name ="nazad" Click ="nazad_Click" Grid.Column="1" Grid.Row="1" Margin="56,166,0,0" FontFamily="Bahnschrift Condensed" FontSize="25" Background="White">Назад</Button>
        <TextBlock HorizontalAlignment="Left" Margin="30,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="33" FontFamily="Bahnschrift SemiBold" FontWeight="Bold" FontSize="30"><Run Language="ru-ru" Text="ФИО"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="26,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Height="39" FontFamily="Bahnschrift SemiBold" FontWeight="Bold" FontSize="30" Grid.Row="1"><Run Language="ru-ru" Text="Класс"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
    </Grid>
</Page>
